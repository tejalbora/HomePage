<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplebg"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="137dp">

    <Button
        android:id="@+id/osi"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="OSI"
        android:textColor="#172a36"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />

    <Button
        android:id="@+id/routingProtocols"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="Routing Protocols"
        android:textColor="#172a36"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <Button
        android:id="@+id/tcpIp"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="TCP/IP"
        android:textColor="#172a36"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:padding="10dp"
        android:text="Computer Networking"
        android:textColor="#172a36"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="227dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.078"
        app:srcCompat="@drawable/cn" />

</androidx.constraintlayout.widget.ConstraintLayout>
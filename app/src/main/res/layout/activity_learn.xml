<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplebg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="414dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="647dp"
        android:background="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center"
        android:padding="10dp"
        android:text="Resource Materials"
        android:textColor="#172a36"
        android:textSize="27sp" />

    <Button
        android:id="@+id/computerNetworkingButton"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="80dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="425dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="Computer Networking"
        android:textColor="#172a36"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/dataStructuresButton"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="80dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="275dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="Data Structures and Algorithms"
        android:textColor="#172a36"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/daaButton"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="80dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="125dp"
        android:layout_weight="1"
        android:width="270dp"
        android:backgroundTint="#cfc2fc"
        android:fontFamily="@font/baloo_tamma"
        android:text="Design and Analysis of Algorithms"
        android:textColor="#172a36"
        android:textSize="20sp"
        app:cornerRadius="10dp" />
    <!-- Add more buttons for additional subjects as needed -->
</RelativeLayout>
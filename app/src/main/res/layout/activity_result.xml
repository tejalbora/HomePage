<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplebg"
    tools:context=".Result">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="201dp"
        android:background="#80FFFFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvres"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="50dp"
            android:background="#00FF00"
            android:fontFamily="@font/baloo_tamma"
            android:gravity="center"
            android:text="Large Text"
            android:textColor="#172A36"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvres2"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvres"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="20dp"
            android:background="#FF0000"
            android:fontFamily="@font/baloo_tamma"
            android:gravity="center"
            android:text="Large Text"
            android:textColor="#172A36"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvres3"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvres2"
            android:layout_alignEnd="@+id/tvres2"
            android:layout_alignRight="@+id/tvres2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="20dp"
            android:background="#172A36"
            android:fontFamily="@font/baloo_tamma"
            android:gravity="center"
            android:text="Large Text"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="65dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#172A36"
        android:fontFamily="@font/baloo_tamma"
        android:text="Restart"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>